<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @contact.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @contact.last_name %>
</p>

<p>
  <strong>Birthday:</strong>
  <%= @contact.birthday %>
</p>

<%= link_to 'Edit', edit_contact_path(@contact) %> |
<%= link_to 'Back', contacts_path %>

<hr />

<table>
  <thead>
    <tr>
      <th>Phonenumber</th>
      <th>Email</th>
      <th colspan="3"><%= link_to 'ajouter telephone a ' + @contact.fullname, tele_path(contact_id: @contact.id) %></th>
    </tr>
  </thead>

  <tbody>
    <% @contact.telephones.each do |telephone| %>
      <tr>
        <td><%= telephone.phonenumber %></td>
        <td><%= telephone.email %></td>
        <td><%= link_to 'Show', telephone %></td>
        <td><%= link_to 'Edit', edit_telephone_path(telephone) %></td>
        <td><%= link_to 'Destroy', telephone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

